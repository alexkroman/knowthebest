.detailheader Add your pick for <a href="/#{@topic.slug}">#{@topic.display_name}</a>
.asksearch
  %form{:method => 'get', :action => "/search/#{@topic[:id]}", :class => 'searchbox'}
    %input{:type => 'text', :size => 26, :name => 'q', :value => @q, :style => 'font-size:1.5em'}
    %input{:type => 'submit', :value => "Search allthebests"} 
  - if @results
    .results
      - @results.each_with_index do |@vote, @index|
        - @detail = haml(:search_result, :layout => false)
        - @actions = haml(:pick_action, :layout => false)
        = haml(:item_layout, :layout => false)